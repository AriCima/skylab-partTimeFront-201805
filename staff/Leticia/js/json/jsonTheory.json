// use JSON.parse() to create an object 'objectMary':
var Mary = '{ "height":1.9, "age":36, "eyeColor":"brown"}';

var objectMary = JSON.parse(Mary);

console.log(objectMary.age);

// You can create a JSON-encoded string of an object using the JSON.stringify() method.
var Mary = new Object();
Mary.height = 1.9;
Mary.age = 36;
Mary.eyecolor = "brown";

// serialize the object using JSON.stringfy():
console.log(JSON.stringify(Mary));

//output: {"height":1.9,"age":36,"eyecolor":"brown"}

